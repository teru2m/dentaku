class dentaku{
  public static void main(String args[]){
    int val1 = 0;  /* �ŏ��̐��� */
    int val2 = 0;  /* ���̐��� */
    String ope;    /* ���Z�q */
    int kekka;     /* ���ʂ��i�[ */
    String opeStr[] = {"kake", "waru", "tasu", "hiku"};
    boolean errFlag = true;

    /* 引数の数の確認 */
    if (args.length != 3){
      errDisp("引数は3個入力してください");
    }

    /* val1 , val2 に数値が入力されているかの確認 */
    try{
      val1 = Integer.parseInt(args[0]);
      val2 = Integer.parseInt(args[2]);
    }catch(NumberFormatException e){
      errDisp("数値でない値が入力されています");
    }

    /* 演算子をopeに代入*/
    ope = args[1];

    /* 入力された演算子が四則演算かの確認 */
    for (int i = 0 ; i < 4 ; i++){
      if (ope.equals(opeStr[i])){
        errFlag = false;
      }
    }

    /*  */
    if (errFlag == true){
      errDisp("演算子は kake waru tasu hiku の４つです");
    }

    switch(ope){
      case "kake":
        kekka = val1 * val2;
        break;
      case "tasu":
        kekka = val1 + val2;
        break;
      case "hiku":
        kekka = val1 - val2;
        break;
      case "waru":
        if(val2!=0) kekka = val1 / val2;
        else errDisp("0 で割ろうとしました");
    }

    System.out.println("入力された式は " + val1 + " " + ope + " " + val2 + " です");
    System.out.println("計算結果は " + kekka + " です");
  }

  private static void errDisp(String errStr){
    System.out.println("Usage : java dentaku ���l ���Z�q ���l");
    System.out.println(errStr);
    System.exit(0);  /* �v���O�������I������ */
  }
}
